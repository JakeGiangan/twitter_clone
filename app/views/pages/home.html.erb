<% provide(:title, 'Home') %>
<% if logged_in? %>
  <div class="row mt-5">
    <div class="col-3">
      <section>
        <%= render "shared/user_info" %>
      </section>
      <section>
        <%= render "shared/micropost_form" %>
      </section>
    </div>
    <div class="col-9">
      <div class="card">
        <div class="card card-header">
          <h1>Microposts</h1>
        </div>
        <div class="card-body">
          <%= render 'shared/feed' %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <h1 class=my-4>Awesome Blog</h1>
  <div class="jumbotron">
    <h1 class="display-4">Hello, Universe!!</h1>
    <p class="lead">Welcome to Awesome Blog! <br/> This site is an <strong><em>AWESOME</strong> Twitter Clone Application</em></p>
    <hr class="my-4">
    <%= image_tag "https://media.giphy.com/media/l1KVcrdl7rJpFnY2s/giphy.gif"%>
  </div>
<% end %>